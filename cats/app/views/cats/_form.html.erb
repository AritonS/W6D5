<% if form_type == :edit %>
     <% action_url = cat_url(cat) %>
     <% button_text = "Edit Cat" %>
 <% else %>
     <% action_url = cats_url %>
     <% button_text = "Create Cat" %>
 <% end %>

 <form action="<%= action_url %>" method="POST">

     <% if form_type == :edit %>
         <input type="hidden" name="_method" value="PATCH">
     <% end %>

     <label>Name
         <input type="text" name="cat[name]" value="<%= cat.name %>">
     </label>

     <label>Birth Date
         <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
     </label>

     <label>Sex
         <input type="text" name="cat[sex]" value="<%= cat.sex %>">
     </label>

     <label>Color
         <input type="text" name="cat[color]" value="<%= cat.color %>">
     </label>

     <label>Description
         <input type="text" name="cat[description]" value="<%= cat.description %>">
     </label>

     <button><%= button_text %></button>

 </form> 